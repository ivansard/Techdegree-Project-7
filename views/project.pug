extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{project.project_name}

        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology, index in project.technologies
            li= technology

        a.button.expanded(href= `${project.liveDemoLink}`) Live Demo
        a.button.expanded(href=`${project.githubLink}`) GitHub Repo
    
    img.image(src=`/static/images/${project.imageUrls[0]}`)
    img.image(src=`/static/images/${project.imageUrls[1]}`)
    img.image(src=`/static/images/${project.imageUrls[2]}`)